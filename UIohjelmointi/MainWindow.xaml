<Window x:Class="UIohjelmointi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UIohjelmointi"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid RenderTransformOrigin="0,0">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black"/>
                <GradientStop Color="#FFF7F7F7" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:Name="InfoButton" Content="Do not push!" HorizontalAlignment="Left" Margin="183,102,0,0" VerticalAlignment="Top" Width="145" Height="45" Background="#FFFF0707" FontSize="20" Click="InfoButton_Click"/>
        <TextBlock x:Name="InfoTextBlock" HorizontalAlignment="Left" Margin="183,173,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="51" Width="145" FontSize="16" TextAlignment="Center"/>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="-68,200,0,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Window>
