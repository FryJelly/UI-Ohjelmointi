<Window x:Class="Snake.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Snake"
        mc:Ignorable="d"
        Title="SNAKE - Main Menu" Height="367.647" Width="374.02">
    <Grid>
        <Grid.Background>
            <RadialGradientBrush>
                <GradientStop Color="Black" Offset="0.007"/>
                <GradientStop Color="#FF1E591B" Offset="1"/>
            </RadialGradientBrush>
        </Grid.Background>
        <StackPanel HorizontalAlignment="Left" Height="337" VerticalAlignment="Top" Width="366">
            <TextBlock TextWrapping="Wrap" Text="SNAKE" Height="33" FontSize="24" TextDecorations="{x:Null}" FontWeight="Bold" Foreground="Red" TextAlignment="Center"/>
            <Image Height="185" Source="biting-snake-feature.jpg"/>
            <Button x:Name="PlayButton" Content="Play" Height="59" FontSize="36" FontWeight="Bold" Click="PlayButton_Click"/>
            <Button x:Name="ExitButton" Content="Exit" Height="59" FontSize="36" FontWeight="Bold" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
